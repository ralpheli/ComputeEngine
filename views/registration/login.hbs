<h3>{{viewTitle}}</h3>

<form action="/login" method="POST" autocomplete="off">
  <input type="hidden" name="_id" value="{{login._id}}" />
  <div class="form-group col-md-8">

    <div class="form-group col-md-8">

      <label>Username</label>
      <input
        type="text"
        class="form-control"
        name="Username"
        placeholder="Username"
        value="{{user.Username}}"
      />
      <div class="text-danger">
        {{user.UsernameError}}</div>
    </div>

    <div class="form-group col-md-8">
      <label>Password</label>
      <input
        type="Password"
        class="form-control"
        name="Password"
        min="{.8,}"
        placeholder="Password"
        value="{{user.Password}}"
      />
      <div class="text-danger">
        {{user.PasswordError}}</div>
    </div>
    <div class="form-group col-md-2">
      <input type="Submit" name="Login" class="btn btn-secondary" />

      <p></p>
      <a class="btn btn-secondary" href="/createaccount"><i
          class="fa fa-list-alt"
        ></i>
        Create Account</a>

    </div>
  </div>

</form>